@RenderPage("~/Views/Shared/Back_end/Alert/alert_usuario.cshtml")
@RenderPage("~/Views/Admin/Listados/Cerrar/modal_cerrar_publicacion.cshtml")
@RenderPage("~/Views/Admin/Listados/Estados/modal_estados_publicacion.cshtml")
<h1 class="element-inline-block"><i class="fa fa-cubes" aria-hidden="true"></i> Productos publicados</h1>&nbsp;<a href="@Url.Action("alta_producto", "admin")" type="button" class="btn btn-primary btn-sm" id="alta_producto" , name="alta_producto"><i class="fa fa-cart-plus" aria-hidden="true"></i> Alta de producto</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Titulo</th>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Tipo de Negocio</th>
            <th scope="col">Estado</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.cantPubli > 0)
        {
            foreach (var publicacion in ViewBag.publicaciones)
            {
                <tr>
                    <td>@publicacion.id_publicacion</td>
                    <td id="tt_publi_@publicacion.id_publicacion">@publicacion.titulo</td>
                    <td>@publicacion.Producto.nombre</td>
                    <td>@Decimal.Round(publicacion.precio, 2)</td>
                    <td>@publicacion.TipoNegocio.tipo</td>
                    <td id="estado_publi_@publicacion.id_publicacion">@publicacion.Estado.estado1</td>
                    <td>
                        <a href="@Url.Action("Index", "Producto", new { id_publicacion = @publicacion.id_publicacion })" class="btn btn-info"><i class="fa fa-eye" aria-hidden="true"></i> Ver</a><a href="" id="btn_estado_@publicacion.id_publicacion" class="btn btn-warning est-publi"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> Estados</a><a href="@Url.Action("editar_producto", "admin", new{ id_publicacion = @publicacion.id_publicacion })" class="btn btn-info"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar</a><a href="" id="btn_cerrar_@publicacion.id_publicacion" class="btn btn-danger cerrar-publi"><i class="fa fa-cart-arrow-down" aria-hidden="true"></i> Cerrar</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No hay productos publicados a la fecha</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7" class="text-right">Productos el Trebol.</td>
        </tr>
    </tfoot>
</table>