<h1><i class="fa fa-cart-arrow-down" aria-hidden="true"></i> Negocios concretados</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Titulo</th>
            <th scope="col">Producto</th>
            <th scope="col">Precio</th>
            <th scope="col">Tipo de Negocio</th>
            <th scope="col">Estado</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.cantClosed > 0)
        {
            foreach (var cerrados in ViewBag.negociosCerrados)
            {
                <tr>
                    <td>@cerrados.ID</td>
                    <td>@cerrados.titulo</td>
                    <td>@cerrados.producto</td>
                    <td>@cerrados.precio</td>
                    <td>@cerrados.tipoNegocio</td>
                    <td>@cerrados.estado</td>
                    <td>
                        <button class="btn btn-info">Ver</button>&nbsp;
                        <button class="btn btn-warning">Estado</button>&nbsp;
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No hay negocios concretados a la fecha</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7" class="text-right">Negocios concretados el Trebol.</td>
        </tr>
    </tfoot>
</table>