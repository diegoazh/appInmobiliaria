<div id="modal_cerrar_comentario" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title cerrar-comentario-tt"></h4>
            </div>
            <div class="modal-body">
                <h4>Coment&oacute;: </h4>
                <p id="contenido_comentario"></p>
                <hr />
                <form>
                    <div class="form-group">
                        <label for="respuesta" class="sr-only"><i class="fa fa-commenting-o" aria-hidden="true"></i> Respuesta: </label>
                        <div class="input-group">
                            <div class="input-group-addon">Respuesta:<br /><i class="fa fa-commenting-o" aria-hidden="true"></i></div>
                            @Html.TextArea("respuesta", new { @class = "form-control", maxlength = "500", rows = "7", placeholder = "Ingrese una breve respuesta de lo hablado, pactado o informado a la persona que realizó el comentario.\nUtiliceló para recordar más adelante el acuerdo al que se llegó o lo que se informó.\nPuede cerrarlo sin cargar una respuesta." })
                        </div>
                        <div class="text-right">
                            <small class="text-info">Quedan <span id="cant_char"></span> caracteres sin usar.</small>
                        </div>
                    </div>
                    @Html.Hidden("id_comentario", "")
                    @Html.Hidden("id_usuario", "")
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button id="btn_cerrar_comentario" type="button" class="btn btn-primary">Finalizar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->