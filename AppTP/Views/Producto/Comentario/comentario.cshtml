@model AppTP.Models.Comentario
<div id="modal_comentario" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Comentario: @ViewBag.publicacion[0].titulo</h4>
            </div>
            <div class="modal-body">
                @using (@Html.BeginForm("comentario", "Producto", FormMethod.Post, new { id = "frm_single_product", name = "frm_single_product" }))
                {
                    <div class="form-group">
                        <label class="sr-only" for="nombre">Nombre: </label>
                        <div class="input-group">
                            <div class="input-group-addon">Nombre</div>
                            @Html.TextBoxFor(c => c.nombre, new { @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="apellido">Apellido: </label>
                        <div class="input-group">
                            <div class="input-group-addon">Apellido</div>
                            @Html.TextBoxFor(c => c.apellido, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="mail">Email: </label>
                        <div class="input-group">
                            <div class="input-group-addon">Email</div>
                            @Html.TextBoxFor(c => c.mail, new { @class = "form-control", type = "email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="telefono">Tel&eacute;fono: </label>
                        <div class="input-group">
                            <div class="input-group-addon">Tel&eacute;fono</div>
                            @Html.TextBoxFor(c => c.telefono, new { @class = "form-control", type = "number", max = "11" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="celular">Celular: </label>
                        <div class="input-group">
                            <div class="input-group-addon">Celular</div>
                            @Html.TextBoxFor(c => c.celular, new { @class = "form-control", type = "number", max = "11" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="comentario1">Comentario:</label>
                        <div class="input-group">
                            <div class="input-group-addon">Comentario</div>
                            @Html.TextAreaFor(c => c.comentario1, new { @class = "form-control", maxlength = "500", rows = "8" })
                        </div>
                    </div>
                    @Html.HiddenFor(c => c.id_publicacion)
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button id="btn_single_comment" type="button" class="btn btn-success">Enviar comentario</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->