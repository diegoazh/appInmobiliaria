@model AppTP.Models.Usuario
<div id="modal_login_form" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="panel-title"><i class="fa fa-users" aria-hidden="true"></i> Ingreso a la administraci&oacute;n</h3>
            </div>
            <div class="modal-body">
                <div class="centrado_page">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">Login de administradores <i class="fa fa-sign-in" aria-hidden="true"></i></h3>
                        </div>
                        <div class="panel-body">
                            @using (Html.BeginForm("loginUsuario", "Usuario", FormMethod.Post))
                            {
                                @Html.ValidationSummary(true)
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="user" class="sr-only"><i class="fa fa-user" aria-hidden="true"></i> Usurio: </label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i> Usuario:</div>
                                        @Html.TextBoxFor(x => x.username, new { @class = "form-control", name = "username", placeholder = "nombre de usuario" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="sr-only"><i class="fa fa-lock" aria-hidden="true"></i> Contrase&ntilde;a: </label>
                                    <div class="input-group">
                                        <div class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i> Contrase&ntilde;a</div>
                                        @Html.PasswordFor(x => x.pass, new { @class = "form-control", name = "password", placeholder = "Ingrese su contraseña" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="recordarme">Rerordarme: </label>
                                    @Html.CheckBox("recordarme", new { name = "recordarme"})
                                </div>
                                <div class="text-center">
                                    <input class="btn btn-default" type="reset" name="reset" value="Reiniciar" />
                                    <input class="btn btn-success" type="submit" name="submit" value="Ingresar" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->