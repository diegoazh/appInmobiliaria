@model AppTP.Models.Usuario
<div id="modal_create_user" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"><i class="fa fa-user-plus" aria-hidden="true"></i> Crear Nuevo Usuario</h4>
            </div>
            <div class="modal-body">
                @RenderPage("~/Views/Shared/Back_end/Alert/alert_usuario.cshtml")
                @using (Html.BeginForm("crear_usuario", "Usuario", FormMethod.Post, new { id = "frm_crear_usuario", name = "frm_crear_usuario", enctype = "multipart/form-data" }))
                {
                    <div class="form-group">
                        <label for="username" class="sr-only"><i class="fa fa-user" aria-hidden="true"></i> Nombre de usuario: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i> Nombre de usuario:</div>
                            @Html.TextBoxFor(x => x.username, new { @class = "form-control", nim = "5", placeholder = "Ingrese el nombre de usuario" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="nombre" class="sr-only"><i class="fa fa-user" aria-hidden="true"></i> Nombre: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i> Nombre:</div>
                            @Html.TextBoxFor(x => x.nombre, new { @class = "form-control", placeholder = "Ingrese el nombre" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="apellido" class="sr-only"><i class="fa fa-user" aria-hidden="true"></i> Apellido: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i> Apellido: </div>
                            @Html.TextBoxFor(x => x.apellido, new { @class = "form-control", placeholder = "Ingrese el apellido" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="mail" class="sr-only"><i class="fa fa-envelope" aria-hidden="true"></i> Email: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i> Email:</div>
                            @Html.TextBoxFor(x => x.mail, new { @class = "form-control", type = "email", placeholder = "Ingrese el email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="sr-only"><i class="fa fa-lock" aria-hidden="true"></i> Contrase&ntilde;a: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i> Contrase&ntilde;a:</div>
                            @Html.Password("password", "", new { @class = "form-control", min = "8", max = "20", placeholder = "Ingrese la contraseña" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="pass" class="sr-only"><i class="fa fa-lock" aria-hidden="true"></i> Repetir contrase&ntilde;a: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-lock" aria-hidden="true"></i> Repetir contrase&ntilde;a:</div>
                            @Html.PasswordFor(x => x.pass, new { @class = "form-control", min = "8", max = "20", placeholder = "Repita la contraseña" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="telefono" class="sr-only"><i class="fa fa-phone" aria-hidden="true"></i> <i class="fa fa-mobile" aria-hidden="true"></i> Tel&eacute;fono: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-phone" aria-hidden="true"></i> <i class="fa fa-mobile" aria-hidden="true"></i> Tel&eacute;fono:</div>
                            @Html.TextBoxFor(x => x.telefono, new { @class = "form-control", type = "tel", placeholder = "Ingrese el número de teléfono o celular" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="foto_propia" class="sr-only"><i class="fa fa-file-image-o" aria-hidden="true"></i> Foto: </label>
                        @Html.HiddenFor(x => x.Foto.foto1)
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-file-image-o" aria-hidden="true"></i> Foto:</div>
                            <input id="foto_propia" name="foto_propia" type="file" value="" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="avatar_sistema" class="sr-only"><i class="fa fa-file-image-o" aria-hidden="true"></i> Avatar: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-file-image-o" aria-hidden="true"></i> Avatar:</div>
                            @{List<SelectListItem> theAvatars = new List<SelectListItem>();
                            foreach (var avatar in ViewBag.avatars)
                            {
                                theAvatars.Add(new SelectListItem
                                {
                                    Text = avatar.avatar1,
                                    Value = avatar.id_avatar.ToString()
                                });
                            }}
                            @Html.DropDownListFor(x => x.id_avatar, selectList: theAvatars, htmlAttributes: new { id = "id_avatar", name = "id_avatar", @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="roles" class="sr-only"><i class="fa fa-list-alt" aria-hidden="true"></i> Roles: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-list-alt" aria-hidden="true"></i> Roles:</div>
                            @{List<SelectListItem> theRoles = new List<SelectListItem>();
                            foreach (var role in ViewBag.roles)
                            {
                                theRoles.Add(new SelectListItem
                                {
                                    Text = role.nombre,
                                    Value = role.id_rules.ToString()
                                });
                            }}
                            @Html.DropDownListFor(x => x.id_rules, selectList: theRoles, htmlAttributes: new { id = "id_rules", name = "id_rules", @class = "form-control" })
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="crear" name="crear">Crear usuario</button>
            </div>    
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->