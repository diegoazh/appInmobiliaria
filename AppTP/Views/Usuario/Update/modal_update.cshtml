<div id="modal_update_pass" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Actualizar contraseña</h4>
            </div>
            <div class="modal-body">
                @RenderPage("~/Views/Shared/Back_end/Alert/alert_usuario.cshtml")
                <form id="frm_update_password" name="frm_update_password" method="post" action="">
                    <div class="form-group">
                        <label class="sr-only"><i class="fa fa-key" aria-hidden="true"></i> Nueva contrase&ntilde;a: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i> Nueva Contraseña</div>
                            <input name="pass_nvo" id="pass_nvo" type="password" value="" class="form-control" placeholder="Ingrese la nueva contraseña..." />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="sr-only"><i class="fa fa-key" aria-hidden="true"></i> Repetir contrase&ntilde;a: </label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i> Repetir Contraseña</div>
                            <input name="pass_repet" id="pass_repet" type="password" value="" class="form-control" placeholder="Repita la contraseña la nueva contraseña..." />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button id="btn_modal_actualizar" type="button" class="btn btn-primary">Actualizar contrase&ntilde;a</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->