@model AppTP.Models.Usuario

@{
    ViewBag.Title = "perfil";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 margen-superior-15">
    @if (Model.id_foto != null)
    { <img class="element-inline-block img-responsive img-circle" src="~/images/foto_usuarios/@Model.Foto.foto1" alt="Alternate Text" /> }
    else
    { <img class="element-inline-block img-responsive img-circle" src="~/images/avatars/@Model.Avatar.avatar1" alt="Alternate Text" /> }
    <h2 class="element-inline-block">@Model.nombre.ToUpper(), @Model.apellido.ToUpper()</h2><button id="edit_user" class="btn btn-info btn-xs margen-izq-5"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar</button>
    <table class="table table-striped table-hover margen-superior-15">
        <caption>Información del usario</caption>
        <thead>
            <tr>
                <th scope="col">DETALLE</th>
                <th scope="col">VALORES</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.username).ToString().ToUpper()</th>
                <td>@Html.DisplayFor(model => model.username)</td>
            </tr>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.nombre).ToString().ToUpper()</th>
                <td>@Html.DisplayFor(model => model.nombre)</td>
            </tr>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.apellido).ToString().ToUpper()</th>
                <td>@Html.DisplayFor(model => model.apellido)</td>
            </tr>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.mail).ToString().ToUpper()</th>
                <td>@Html.DisplayFor(model => model.mail)</td>
            </tr>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.Rules).ToString().ToUpper()</th>
                <td>@Html.DisplayFor(model => model.Rules.nombre)</td>
            </tr>
            <tr>
                <th scope="row">@Html.DisplayNameFor(model => model.telefono).ToString().ToUpper()</th>
                <td>@Html.DisplayFor(model => model.telefono)</td>
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2" class="text-right">Datos registrados en la base de datos de El Tr&eacute;bol</td>
            </tr>
        </tfoot>
    </table>
</div>

@section scripts_admin{
    @RenderPage("~/Views/Shared/Back_end/Sections/adminScripts.cshtml")
}
